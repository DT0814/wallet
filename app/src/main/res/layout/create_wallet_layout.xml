<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:gravity="center|top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/createPreBut"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageButton
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:background="@color/colorPrimary"
                android:scaleType="centerInside"
                android:src="@drawable/pre" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/infoWalletName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:text="@string/createWallet"
            android:textColor="@color/whiteColor"
            android:textSize="19dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/walletName"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="31dp"
            android:background="@null"
            android:hint="钱包名"
            android:inputType="text"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_gray"></View>

        <EditText
            android:id="@+id/inPass"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="31dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_gray"></View>

        <EditText
            android:id="@+id/rePass"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="31dp"
            android:background="@null"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_gray"></View>

        <Button
            android:id="@+id/createBut"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/create_but_fill_off"
            android:enabled="false"
            android:text="@string/createWallet"
            android:textColor="@color/whiteColor"
            android:textSize="17dp" />
    </LinearLayout>


</LinearLayout>
