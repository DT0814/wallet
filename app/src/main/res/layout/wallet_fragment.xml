<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">


    <ListView
        android:id="@+id/walletList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/background_gray"
        android:divider="@null" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:background="@color/background_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/create_wallet_but" />

            <Button
                android:id="@+id/createWallet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center"
                android:minHeight="60dp"
                android:padding="2dp"
                android:text="@string/createWallet"
                android:textColor="@color/text_color_black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/trbutC"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/import_wallet_but" />

            <Button
                android:id="@+id/inWallet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center"
                android:minHeight="60dp"
                android:text="@string/importWallet"
                android:textColor="@color/whiteColor"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
