<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/copyKeyStorePerBut"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerInside"
            android:src="@drawable/pre" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:text="@string/copyKeyStore"
            android:textColor="@color/whiteColor"
            android:textSize="19dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relat"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="@string/offLineSave"
            android:textColor="@color/text_color_blue"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="7dp"
            android:gravity="left"
            android:text="@string/offLineSaveText"
            android:textColor="@color/text_color_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relat"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="@string/noNetTra"
            android:textColor="@color/text_color_blue"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginTop="7dp"
            android:gravity="left"
            android:text="@string/noNetTraText"
            android:textColor="@color/text_color_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relat"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp">

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="@string/passBox"
            android:textColor="@color/text_color_blue"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_marginTop="7dp"
            android:gravity="left"
            android:text="@string/passBoxText"
            android:textColor="@color/text_color_gray" />
    </RelativeLayout>

    <TextView
        android:id="@+id/keyStoreText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/radius"
        android:ems="20"
        android:gravity="center|top"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:paddingLeft="6dp"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/text_color_black"
        android:textColorHint="@color/text_color_gray"
        android:textSize="15dp" />

    <Button
        android:id="@+id/copyBut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/fillet_fill"
        android:text="@string/copy"
        android:textColor="@color/whiteColor"
        android:textSize="15dp" />

</LinearLayout>
