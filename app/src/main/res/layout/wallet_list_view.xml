<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wallet_radius"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top">

                <ImageView
                    android:id="@+id/wallet_item_img"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/touxiang" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wallet_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="TT"
                    android:textColor="@color/text_color_black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/wallet_item_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="7dp"
                    android:ellipsize="middle"
                    android:ems="10"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="0x59dead1313ddeqe1d1r123123123121r1fc1f"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top">

                <ImageButton
                    android:id="@+id/switchWalletBut"
                    android:layout_width="10dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/whiteColor"
                    android:scaleType="centerInside"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_gray"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/walletCacheNum"
                android:layout_width="300dp"
                android:layout_height="39dp"
                android:gravity="right|bottom"
                android:text="0"
                android:textColor="@color/text_color_black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="39dp"
                android:gravity="bottom|left"
                android:padding="1dp"
                android:text="ether"
                android:textColor="@color/text_color_gray"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
