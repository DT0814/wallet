<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/whiteColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|center"
        android:orientation="vertical">

        <!-- <ImageView
             android:layout_width="160dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="139dp"
             android:src="@drawable/token_coin" />-->

        <TextView
            android:id="@+id/tokenSafe"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="139dp"
            android:text="TokenSafe"
            android:textColor="@color/colorPrimary"
            android:textSize="35dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="您的智能数字钱包"
            android:textColor="@color/text_color_black"
            android:textSize="21dp" />

        <Button
            android:id="@+id/createBut"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginTop="182dp"
            android:background="@drawable/create_png"
            android:text="@string/createWallet"
            android:textColor="@color/whiteColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/importBut"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/wallet_import_png"
            android:text="@string/importWallet"
            android:textColor="@color/whiteColor"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top">

    </LinearLayout>
</RelativeLayout>


