<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/touxiang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/touxiang" />

            <TextView
                android:id="@+id/walletName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/touxiang"
                android:text="TT"
                android:textColor="@color/whiteColor" />

            <LinearLayout
                android:id="@+id/toAddressLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true">

                <TextView
                    android:id="@+id/homeShowAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:ems="14"
                    android:singleLine="true"
                    android:text="0x1231200sadas02130010231999qwe09901290390"
                    android:textColor="@color/whiteColor"
                    android:textSize="15dp" />

                <ImageButton
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="25px"
                    android:background="@color/colorPrimary"
                    android:scaleType="centerInside"
                    android:src="@drawable/qr_icon" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:gravity="left|bottom"
                android:paddingLeft="37px"
                android:text="@string/own"
                android:textColor="@color/zichanClolr"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="37px"
                        android:layout_weight="5"
                        android:gravity="left|center"
                        android:text="â‰ˆ"
                        android:textColor="@color/whiteColor"
                        android:textSize="28dp" />

                    <TextView
                        android:id="@+id/ethNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="24px"
                        android:text="@string/eth"
                        android:textColor="@color/whiteColor"
                        android:textSize="28dp" />
                </LinearLayout>


                <ImageButton
                    android:id="@+id/addCoinBut"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center"
                    android:layout_weight="5"
                    android:background="@color/colorPrimary"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_coin" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/coinListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/whiteColor" />

</LinearLayout>
