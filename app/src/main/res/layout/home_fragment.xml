<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:gravity="top"
        android:minHeight="300dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/touxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/star_1" />

            <TextView
                android:id="@+id/walletName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/touxiang"
                android:text="TT"
                android:textColor="@color/text_color_black" />

            <LinearLayout
                android:id="@+id/toAddressLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true">

                <TextView
                    android:id="@+id/homeShowAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:ems="10"
                    android:singleLine="true"
                    android:text="0x1231200sadas02130010231999qwe09901290390"
                    android:textColor="@color/text_color_black" />

                <ImageButton
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@color/colorPrimary"
                    android:scaleType="centerInside"
                    android:src="@drawable/qr_icon" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:gravity="left|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ethNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="@string/eth"
                android:textColor="@color/text_color_black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/addCoinBut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_weight="5"
                android:background="@color/colorPrimary"
                android:scaleType="centerInside"
                android:src="@drawable/add_coin" />
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/sendTransaction"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_circle"
        android:text="@string/send_text"
        android:textColor="@color/text_color_black"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/coinListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/whiteColor"
        android:divider="@null" />

</LinearLayout>
