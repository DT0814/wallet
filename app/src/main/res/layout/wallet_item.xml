<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/walletbg_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/wallet_item_img"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="17dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/touxiang" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toLeftOf="@+id/switchWalletBut"
                    android:layout_toRightOf="@+id/wallet_item_img"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wallet_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="TT"
                        android:textColor="@color/whiteColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/wallet_item_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="middle"
                        android:ems="10"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="0x59dead1313ddeqe1d1r123123123121r1fc1f"
                        android:textColor="@color/whiteColor"
                        android:textSize="14dp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/switchWalletBut"
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="22dp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/next" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/background_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/walletCacheNum"
                    android:layout_width="280dp"
                    android:layout_height="39dp"
                    android:gravity="right|bottom"
                    android:text="0"
                    android:textColor="@color/whiteColor"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="39dp"
                    android:gravity="bottom|left"
                    android:padding="1dp"
                    android:text="ether"
                    android:textColor="@color/whiteColor"
                    android:textSize="11dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
