<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/importInPut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_fill_gary_100"
            android:ems="10"
            android:gravity="top"
            android:hint="输入明文私钥"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:paddingLeft="6dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColorHint="@color/text_color_gray"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/importWalletName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="bottom"
                android:hint="请输入钱包名称"
                android:inputType="text"
                android:paddingBottom="7dp"
                android:paddingLeft="6dp"
                android:textColorHint="@color/text_color_gray"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/importPassword"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="@null"
                android:ems="10"
                android:gravity="bottom"
                android:hint="请输入钱包密码"
                android:inputType="textPassword"
                android:paddingBottom="7dp"
                android:paddingLeft="6dp"
                android:textColorHint="@color/text_color_gray"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/importPasswordIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dui_off" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/reImportPassword"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="@null"
                android:ems="10"
                android:gravity="bottom"
                android:hint="再次输入钱包密码"
                android:inputType="textPassword"
                android:paddingBottom="7dp"
                android:paddingLeft="6dp"
                android:textColorHint="@color/text_color_gray"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/reImportPasswordIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dui_off" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_gray" />


        <Button
            android:id="@+id/importButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/fillet_fill_blue_off"
            android:enabled="false"
            android:text="开始导入"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/text_color_gray"
            android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>
